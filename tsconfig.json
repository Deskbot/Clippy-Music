{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "module": "commonjs",
        "noImplicitReturns": true,
        "outDir": "./build",
        "sourceMap": true,
        "sourceRoot": "../src-front",
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "ES2017",
    },

    "exclude": [
        "./src-front"
    ],

    "include": [
        "./src-server"
    ],
}